        {
            "name": "GeMap训练调试",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/single_train.py",
            "args": [
                "${workspaceFolder}/projects/configs/gemap/gemap_simple_r50_110ep.py",
